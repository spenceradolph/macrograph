{
  "name": "macrograph",
  "private": true,
  "workspaces": {
    "packages": [
      "mg/*",
      "mg/packages/*"
    ]
  },
  "scripts": {
    "dev": "concurrently \"yarn app dev\" \"yarn electron dev\" \"yarn core dev\"",
    "core": "yarn workspace @macrograph/core run",
    "app": "yarn workspace @macrograph/app run",
    "delectron": "yarn workspace @macrograph/electron run"
  }
}
